{
  "name": "ReposAS/logfileparser",
  "description": "Logfileparser to provide Usage Statistics for repsitories with RepoAS",
  "license": "GPL-3.0+",

  "require": {
    "ramsey/uuid": "^3.8",
    "monolog/monolog": "^1.24",
    "ext-DOM": "*",
    "ext-libxml": "*",
    "ext-json": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "^6",
    "squizlabs/php_codesniffer": "*"
  },

  "autoload": {
    "psr-4": {
      "ReposAS\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "ReposASTest\\": "test/"
    }
  },

  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "check-full": [
      "@prepare",
      "@cs-report",
      "@test-coverage"
    ],
    "prepare": "mkdir -p build",
    "test": "phpunit --colors=always --log-junit build/phpunit.xml test/",
    "test-coverage": "phpunit --log-junit build/phpunit.xml --colors=always --coverage-html build/coverage/ --coverage-clover build/coverage/clover.xml test/",
    "cs-check": "phpcs -n test/",
    "cs-report": "phpcs -n --report=checkstyle --report-file=build/checkstyle.xml test/",
    "cs-fix": "phpcbf test/"
  }
}
